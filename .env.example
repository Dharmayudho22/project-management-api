# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/project_management"

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# Generate a strong secret key (at least 32 characters)
JWT_SECRET="change_this_to_a_very_strong_secret_key_in_production"
JWT_EXPIRES_IN="60m"

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3000
NODE_ENV=development

# ==========================================
# CORS CONFIGURATION
# ==========================================
FRONTEND_URL="http://localhost:3000"
CORS_ENABLED=true

# ==========================================
# APPLICATION INFO
# ==========================================
APP_NAME="Project Management API"
APP_VERSION="1.0.0"